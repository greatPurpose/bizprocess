<script type="text/javascript">
    var reportattributeJSON = { hasEditor: "0" };
    var reportsubtabs = [];
    var reportEvents = [];
    var myUE = null;
    $(function () {
        resize();
        //$(window).bind('resize', function () { resize(); });
    });

    function resize() {
        $("#editor").height($(window).height() - 139);
        $("#editor").width($(window).width() - 3);
        myUE = UE.getEditor('editor', { wordCount: false, maximumWords: 1000000000, autoHeightEnabled: false });
    }

    function execCommend(method) {
        myUE.execCommand(method);
    }

</script>

